{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@zsszym/api-interfaces": ["libs/api-interfaces/src/index.ts"],
            "@zsszym/core/state": ["libs/core/state/src/index.ts"],
            "@zsszym/feature/dcp/api": ["libs/feature/dcp/api/src/index.ts"],
            "@zsszym/feature/dcp/state": [
                "libs/feature/dcp/state/src/index.ts"
            ],
            "@zsszym/feature/dcp/data": ["libs/feature/dcp/data/src/index.ts"],
            "@zsszym/feature/dcp/view": ["libs/feature/dcp/view/src/index.ts"],
            "@zsszym/feature/defect/api": [
                "libs/feature/defect/api/src/index.ts"
            ]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
